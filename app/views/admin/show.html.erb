<div class="container h-2/4 flex justify-center items-center ">
<h5><%= @user.full_name %></h1>
<h5><%= @user.email %></h1>

<section id="shares">
    <%= @total %><br>
    <% @stocks.each do |stock| %>
        <% if stock.quantity > 0 %>
            <%= stock.name %>
            <%= Stock.iex_api.price(stock.name) * stock.quantity %>
            <%= stock.quantity %>
        <% end %>
        <br>
    <% end %>
</section>

<%= link_to 'Edit details', edit_admin_path(@user) %>
<%= link_to 'Back', admin_index_path %>

</div>