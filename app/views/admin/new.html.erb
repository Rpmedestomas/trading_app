<%= form_for @user, url: create_user_path do |f| %>
  </br>
  </br>
  </br>

  <div class="d-flex flex-column justify-content-center align-items-center" id="inner_bg">
  <h2>Create User</h2>

    <div class="field">
     <%= f.label :email %><br />
     <%= f.email_field :email, autofocus: true, autocomplete: "email", style:"width: 300px;" %>
   </div>
 
   <div class="field">
     <%= f.label :full_name %><br />
     <%= f.text_field :full_name, style:"width: 300px;" %>
   </div>

   <div class="field">
     <%= f.label :password %>
     <% if @minimum_password_length %>
     <em>(<%= @minimum_password_length %> characters minimum)</em>
     <% end %><br />
     <%= f.password_field :password, autocomplete: "new-password", style:"width: 300px;" %>
   </div>
 
   <div class="field">
     <%= f.label :password_confirmation %><br />
     <%= f.password_field :password_confirmation, autocomplete: "new-password", style:"width: 300px;" %>
   </div>
 </br>
   <div class="actions">
     <%= f.submit "Sign up" %>
   </div>
   </div>
 <% end %>